<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
	<script src="https://kit.fontawesome.com/b98ba90590.js" crossorigin="anonymous"></script>
	<link href="/css/komotria.css" rel="stylesheet" />
      <link href="/css/test.css" rel="stylesheet" />


  </head>
  <%- include('../partials/modal.ejs'); %>
  <body class="bg-dark">
  <%- include('../partials/navbar.ejs'); %>


  <main>
      <!-- sidebar -->
      <%- include('../partials/sidebar.ejs'); %>

      <div class="container">
        <h1 class="text-light text-muted"><%= h1 %></h1>

        <!-- tmp -->
        <!-- Button trigger modal -->
		<% if (!locals.user) { %>
        <button type="button" id="registerBtn" class="btn btn-violet">Register</button>
		<button type="button" id="loginBtn" class="btn btn-violet">Login</button>
		<% } %>
          <br>
              <div id="chat-container">
                  <div id="chat-input">
                      <div id="file-input"></div>
                  </div>
                  <div class="chat"> <!-- first div -->
                      <div class="line-container" style="max-height: 50%; transform: translateX(0px) scale(1);"> <!-- container-->
                          <div class="line bg-black"> <!-- inside box-->
                              <img class="profile-img" src="/img/ios-icon.png" alt="Avatar">
                              <div class="row p-0">
                                  <div class="px-1">
                                  <div class="text-muted">Magos Alexandros</div>
                                  <p class="bg-dark rounded text-light border-dark text-p p-1"></p>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>

      </div>
    </main>
    <!-- footer -->
    <%- include('../partials/footer.ejs'); %>

    <!-- scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
	<script src="https://kit.fontawesome.com/b98ba90590.js" crossorigin="anonymous"></script>
	<script src="/js/sidebar.js"></script>
	<script src="/js/index.js"></script>
    <script src="/js/test.js"></script>

  </body>
</html>